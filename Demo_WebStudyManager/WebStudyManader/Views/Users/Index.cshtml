@model IEnumerable<WebStudyManader.Models.User>
@{
    ViewBag.Title = "List of users";
}

<p>
    <a asp-action="Create">Add User</a>
</p>

<table class="table">
    <tr><th>Email</th><th>Year</th><th></th></tr>
    @foreach (var user in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modeluser => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modeluser => user.Year)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePasswordAdmin" asp-route-id="@user.Id">Change Password without the old</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
     }
</table>
